html
	font-size 1em

body
	font-family open-sans
	color white
	background eggplant

*
	box-sizing border-box

p
	margin 0

img
	max-width 100%

a
	color pacifica
	text-decoration none
	outline none

	&:hover
		border-bottom 1px solid

hr
	border-bottom 1px solid white
	border-top 0
	border-left 0
	border-right 0

button
input
select
	margin 0
	outline none
	border 0
	font-family inherit

button
select
	cursor pointer

/**
 * ngCloak
 * src: https://docs.angularjs.org/api/ng/directive/ngCloak
 */
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak
	display none !important